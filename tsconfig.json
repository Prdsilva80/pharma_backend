{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false
    },
    "include": ["src", "src/@types/index.d.ts"],
    "files": ["src/@types/index.d.ts"],
    "exclude": ["node_modules", "dist"]
}
